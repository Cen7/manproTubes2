<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <link rel="icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="theme-color" content="#000000" />
  <title>Home Page</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter%3A400%2C500%2C700"/>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro%3A400%2C500%2C700"/>
  <link rel="stylesheet" href="/css/home-page.css"/>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>
<div class="navbar">
</div>
<body>
  <div class="home-page">
    <div class="content-left">
      <p class="dashboard">Dashboard</p>
      <div class="upload-view">
        <div class="upload">
          <p class="upload-view-text">Upload new data</p>
          <div class="upload-view-button">Upload</div>
        </div>
        <div class="line">
        </div>
        <div class="view">
          <p class="upload-view-text">View data sets</p>
          <div class="upload-view-button">View</div>
        </div>
      </div>

      <div class="section">
        <div class="head-section">
          <p class="title-section">Jumlah produk ikan (fish) yang dibeli oleh tiap kelompok Education</p>
          <button onclick="dataSummary()" class="view-more">View more</button>
        </div>
        <table class="content-section">
          <tr>
            <th>Education</th>
            <th>Count of Fish</th>
          </tr>
          <tr>
            <td>55</td>
            <td>Primary School</td>
          </tr>
          <tr>
            <td>49</td>
            <td>Junior High School</td>
          </tr>
          <tr>
            <td>44</td>
            <td>High School</td>
          </tr>
          <tr>
            <td>24</td>
            <td>University</td>
          </tr>
          <!-- <tr>
            <td>10</td>
            <td>Primary School</td>
          </tr> -->
        </table>
      </div>
    </div>


    <div class="content-right">
      <div class="section chart" id="bar-chart">
        <div class="head-section">
          <p class="title-section">NumDealsPurchases</p>
          <button onclick="dataSummary()"   class="view-more">View more</button>
        </div>
        <canvas id="bar" style="width:100%;max-width:600px"></canvas>
      </div>

      <div class="section chart" id="scatter-plot">
        <div class="head-section">
          <p class="title-section">NumDealsPurchases</p>
          <button onclick="dataSummary()"   class="view-more">View more</button>
        </div>
        <canvas id="scatter" style="width:100%;max-width:600px"></canvas>
      </div>
    </div>
  </div>
</body>
<script>
  const xValues = ["Primary School", "Junior High School", "High School", "University"];
  const yValues = [55, 49, 44, 24];
  const barColors = ["red", "green","blue","orange"];

  new Chart("bar", {
    type: "bar",
    data: {
      labels: xValues,
      datasets: [{
        backgroundColor: barColors,
        data: yValues
      }]
    },
    options: {
      legend: {display: false},
      title: {
        display: true,
        text: "Sum of Fish"
      }
    }
  });

  function dataSummary(){
    window.location.href='data-summary'
  }

  const xyValues = [
  {x:50, y:7},
  {x:60, y:8},
  {x:70, y:8},
  {x:80, y:9},
  {x:90, y:9},
  {x:100, y:9},
  {x:110, y:10},
  {x:120, y:11},
  {x:130, y:14},
  {x:140, y:14},
  {x:150, y:15}
];

new Chart("scatter", {
  type: "scatter",
  data: {
    datasets: [{
      pointRadius: 4,
      pointBackgroundColor: "rgb(0,0,255)",
      data: xyValues
    }]
  },
  options: {
    legend: {display: false},
    scales: {
      xAxes: [{ticks: {min: 40, max:160}}],
      yAxes: [{ticks: {min: 6, max:16}}],
    }
  }
});
</script>